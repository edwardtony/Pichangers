<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".com.example.prueba.miprimerlayoutdinamico.loginUsuario.LoginUsuarioActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_gravity="left|top"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="254dp"
        android:layout_gravity="center_horizontal|bottom"
        android:background="#c8000000"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Login"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textIsSelectable="false"
            android:layout_margin="30dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_gravity="center_horizontal"
            android:text="Ingrese usuario"
            android:textColor="#f0ebeb"
            android:selectAllOnFocus="false"
            android:textIsSelectable="false"
            android:layout_margin="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:layout_gravity="center_horizontal"
            android:text="Ingrese password"
            android:textColor="#f0ebeb"
            android:selectAllOnFocus="false"
            android:textIsSelectable="false"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACCEDER"
            android:id="@+id/btn_acceder"
            android:background="#3bb57c"
            android:textColor="#f1e9e9"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pichangers"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="90dp"
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:textStyle="bold" />
</FrameLayout>
